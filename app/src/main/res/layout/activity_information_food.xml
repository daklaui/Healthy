<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationFood">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:text="Calories"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.app.progresviews.ProgressWheel
                    android:id="@+id/Calories"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:barWidth="5dp"
                    app:countText="931,199"
                    app:countTextColor="@android:color/black"
                    app:countTextSize="12sp"
                    app:defTextColor="@android:color/black"
                    app:defTextSize="10sp"
                    app:definitionText="Steps"
                    app:marginBtwText="15dp"
                    app:percentage="90"
                    app:progressColor="#030303" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:text="Net Carbs"
                    android:textColor="#337939"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <com.app.progresviews.ProgressWheel
                    android:id="@+id/Net_Carbs"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:barWidth="5dp"
                    app:countText="931,199"
                    app:countTextColor="#337939"
                    app:countTextSize="12sp"
                    app:defTextColor="#337939"
                    app:defTextSize="10sp"
                    app:definitionText="Steps"
                    app:marginBtwText="15dp"
                    app:percentage="90"
                    app:progressColor="#337939" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="61dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_horizontal"

                    android:text="Protein"
                    android:textColor="#673AB7"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <com.app.progresviews.ProgressWheel
                    android:id="@+id/Protien"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:barWidth="5dp"
                    app:countText="931,199"
                    app:countTextColor="#673AB7"
                    app:countTextSize="12sp"
                    app:defTextColor="#673AB7"
                    app:defTextSize="10sp"
                    app:definitionText="Steps"
                    app:marginBtwText="15dp"
                    app:percentage="90"
                    app:progressColor="#673AB7" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"

                    android:text="Fat"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.app.progresviews.ProgressWheel
                    android:id="@+id/Fat"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:barWidth="5dp"
                    app:countText="931,199"
                    app:countTextColor="#2196F3"
                    app:countTextSize="12sp"
                    app:defTextColor="#2196F3"
                    app:defTextSize="10sp"
                    app:definitionText="Steps"
                    app:marginBtwText="15dp"
                    app:percentage="90"
                    app:progressColor="#2196F3" />


>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>