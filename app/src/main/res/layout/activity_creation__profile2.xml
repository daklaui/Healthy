<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Creation_Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <com.example.healthy.Adapters.CustomViewPagerNoSwip
            android:id="@+id/viewPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </com.example.healthy.Adapters.CustomViewPagerNoSwip>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
       >

        <Button
            android:id="@+id/btnSkip"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"

            android:gravity="center"
            android:onClick="previous_fragment"
            android:text="Précédent"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnNext"
            style="@style/AppTheme.RoundedCornerMaterialButton"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="0dp"
            android:onClick="next_fragment"
            android:text="Suivant"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnvValide"
            style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"
            android:onClick="valide_form"
            android:text="valider"
            android:textColor="#FFFFFF"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>